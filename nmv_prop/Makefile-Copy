#FC=~pnroy/Dev/bin/gfortran
#LDFLAGS=-L/opt/intel/mkl/lib/intel64 -llapack -L/home/pnroy/Dev/lib64/

HOST=$(shell hostname)
ifeq ($(HOST), gra-login3)
	FC=ifort
	LDFLAGS=-mkl=sequential
else
	FC=gfortran
	LDFLAGS=-llapack
endif

asymrho.x:	asymrho.o
		$(FC) -o $@ asymrho.o $(LDFLAGS)

.f.o:
	${FC} -O3 -c $<

clean:
	rm -f *.o asymrho.x
