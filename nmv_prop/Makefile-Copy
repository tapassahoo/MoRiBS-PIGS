endif
ifeq ($(HOST), cedar4.cedar.computecanada.ca)
	FC=ifort
	LDFLAGS=-mkl=sequential
endif
ifeq ($(HOST), cedar5.cedar.computecanada.ca)
	FC=ifort
	LDFLAGS=-mkl=sequential
endif
ifeq ($(HOST), feynman)
	FC=gfortran
	LDFLAGS=-llapack
endif
ifeq ($(HOST), nlogn)
	FC=gfortran
	LDFLAGS=-llapack
endif

asymrho.x:	asymrho.o
		$(FC) -o $@ asymrho.o $(LDFLAGS)

.f.o:
	${FC} -O3 -c $<

clean:
	rm -f *.o asymrho.x
