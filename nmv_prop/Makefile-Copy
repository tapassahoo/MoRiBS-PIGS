	FC=ifort
	LDFLAGS=-mkl=sequential
endif
ifeq ($(HOST), cedar1.cedar.computecanada.ca)
	FC=ifort
	LDFLAGS=-mkl=sequential
endif
ifeq ($(HOST), cedar2.cedar.computecanada.ca)
	FC=ifort
	LDFLAGS=-mkl=sequential
endif
ifeq ($(HOST), cedar3.cedar.computecanada.ca)
	FC=ifort
