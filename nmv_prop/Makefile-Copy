HOST=$(shell hostname)
server := $(shell echo $(HOST) | cut -c-3)
#$(info $(server))

ifeq ($(server), gra)
	FC=ifort
	LDFLAGS=-mkl=sequential
endif
ifeq ($(server), ced)
	FC=ifort
	LDFLAGS=-mkl=sequential
endif
ifeq ($(server), fey)
	FC=gfortran
	LDFLAGS=-llapack
endif
ifeq ($(server), nlo)
	FC=gfortran
	LDFLAGS=-llapack
endif

asymrho.x:	asymrho.o
	$(FC) -o $@ asymrho.o $(LDFLAGS)

.f.o:
	${FC} -O3 -c $<

clean:
	rm -f *.o asymrho.x
